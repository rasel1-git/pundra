#include <stdio.h>
int main() {
int i,n,a[100],item,found;
printf("\n Enter the range of array: ");
scanf("%d",&n);
printf("\n Enter the Element of array ");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
printf("\n After traversing .....\n");
for(i=0;i<n;i++)
printf("%4d\n",a[i]);
printf("\n enter the element to search: ");
scanf("%d",&item);
found=0;
for(i=0;i<n;i++){
if(a[i]==item)
found=1;
}
if (found==1)
printf("Item is found");
else
printf("Item is not found");
